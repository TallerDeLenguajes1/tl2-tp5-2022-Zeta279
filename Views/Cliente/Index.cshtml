@{
    ViewData["Title"] = "Clientes";
}

@model List<Cadeteria.ViewModels.ClienteViewModel>

<h1>Clientes</h1>
<section class="crear">
    <a asp-controller="Cliente" asp-action="Create">+</a>
</section>

<section class="clientes">
    @if (Model.Count > 0)
    {
        <table>
            <thead>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Acciones</th>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Direccion</td>
                        <td>@cliente.Telefono</td>
                        <td><section class="table-botones"><a href="/Cliente/Edit/@cliente.ID" class="cliente-editar">Editar</a><a href="/Cliente/Delete/@cliente.ID" class="cliente-borrar">Borrar</a></section></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>No existe ningún cliente</h3>
    }

</section>