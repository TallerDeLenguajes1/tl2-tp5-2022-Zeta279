@{
    ViewData["Title"] = "Crear pedido";
}

@using Cadeteria.ViewModels
@model Cadeteria.ViewModels.CrearPedidoViewModel

<section class="crear-pedido">
    <h2>Crear pedido</h2>
    <form method="post" class="form-create">
        <h4>Datos del pedido</h4>
        <label asp-for="@Model.Detalles"></label>
        <input asp-for="@Model.Detalles">

        <input asp-for="@Model.NuevoCliente" hidden>

        <h5>Cliente</h5>
        <a id="boton-cliente" href="#" onclick="manejoClientes()">Nuevo</a>

        <!-- Cliente existente -->
        <section id="selec-cliente">
        <label asp-for="@Model.ClienteID">Seleccionar</label>
        @if(((List<ClienteViewModel>)ViewData["clientes"]).Count > 0)
        {
            <select asp-for="@Model.ClienteID">
                    @foreach (var cliente in (List<ClienteViewModel>)ViewData["clientes"])
                {
                    <option value="@cliente.ID">@cliente.Nombre</option>
                }
            </select>
        }
        else
        {
            <p>No hay ningún cliente</p>
        }
        </section>

        <!-- Cliente nuevo -->
        <section id="nuevo-cliente">
            <label asp-for="@Model.ClienteNombre"></label>
            <input asp-for="@Model.ClienteNombre">

            <label asp-for="@Model.ClienteDireccion"></label>
            <input asp-for="@Model.ClienteDireccion">

            <label asp-for="@Model.ClienteTelefono"></label>
            <input asp-for="@Model.ClienteTelefono">
        </section>
        <button>Ingresar</button>
    </form>
</section>